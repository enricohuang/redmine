<%= call_hook :view_account_login_top %>

<div id="login-form">
  <h3><%= l(:label_login) %></h3>
  <%= form_tag(signin_path, onsubmit: 'return keepAnchorOnSignIn(this);') do %>
  <%= back_url_hidden_field_tag %>

  <div class="mb-3">
    <label for="username"><%=l(:field_login)%></label>
    <%= text_field_tag 'username', params[:username], :tabindex => '1', :autocomplete => 'username', :autofocus => params[:username].blank?, :placeholder => l(:field_login) %>
  </div>

  <div class="mb-3">
    <div class="d-flex justify-content-between align-items-center">
      <label for="password" class="mb-0"><%=l(:field_password)%></label>
      <% if Setting.lost_password? %>
        <%= link_to l(:label_password_lost), lost_password_path, :class => "lost_password" %>
      <% end %>
    </div>
    <%= password_field_tag 'password', nil, :tabindex => '2', :autocomplete => 'current-password', :autofocus => params[:username].present?, :placeholder => l(:field_password) %>
  </div>

  <% if Setting.autologin? %>
    <div class="mb-3">
      <label>
        <%= check_box_tag 'autologin', 1, false, :tabindex => 4 %>
        <%= l(:label_stay_logged_in) %>
      </label>
    </div>
  <% end %>

  <input type="submit" name="login" value="<%=l(:button_login)%>" tabindex="5" id="login-submit" />
  <% end %>
</div>

<%= call_hook :view_account_login_bottom %>
